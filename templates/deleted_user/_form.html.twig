            var deleteDate =document.getElementById('deleted_user_DisableDate').value;

            var a = moment(deleteDate);

            document.getElementById('deleted_user_DeleteDate').value = a.add(1, 'month').format('YYYY-MM-DD');
            document.getElementById('deleted_user_ArchiveDate').value = a.add(1, 'year').format('YYYY-MM-DD');

        })
    } );
